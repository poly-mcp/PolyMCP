{
  "version": "1.0.0",
  "description": "MCP tool server registry",
  "servers": [
    "http://localhost:8000/mcp",
    "http://localhost:8001/mcp"
  ],
  "server_metadata": {
    "http://localhost:8000/mcp": {
      "name": "Text Analysis Server",
      "description": "Text processing and analysis tools",
      "tags": ["text", "nlp", "analysis"],
      "type": "internal",
      "auth_required": false
    },
    "http://localhost:8001/mcp": {
      "name": "Advanced Tools Server",
      "description": "Utility tools for data processing",
      "tags": ["data", "utilities", "processing"],
      "type": "internal",
      "auth_required": false
    }
  },
  "configuration": {
    "auto_discover": true,
    "discovery_timeout": 5,
    "retry_on_failure": true,
    "max_retries": 3
  }
}